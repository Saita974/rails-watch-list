<h2><%= @list.name %></h2>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
    </li>
    <li>
      <%= bookmark.comment %>
    </li>
    <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</ul>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %>

<%= link_to 'Back to Movies List', lists_path, class: "btn btn-outline-secondary" %>
